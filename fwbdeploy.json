      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('network_NIC_fw11_Name')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[parameters('fwbVnetName')]"
      ],
      "properties": {
        "ipConfigurations": [
